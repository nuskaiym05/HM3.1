<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/image_foto_one"
        android:layout_width="390dp"
        android:layout_height="190dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/foto_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/image_foto_one"
        app:layout_constraintTop_toTopOf="@+id/image_foto_one"
        app:layout_constraintBottom_toBottomOf="@+id/image_foto_one"
        android:text="The Colosseum"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="103dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/image_foto_one"
        app:layout_constraintTop_toTopOf="@+id/image_foto_one"
        app:layout_constraintBottom_toBottomOf="@+id/image_foto_one"
        android:text="One of the most recognizable sites in the world"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="137dp"/>

    <ImageView
        android:id="@+id/kvadrat_one"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kvadrat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_foto_one" />

    <ImageView
        android:id="@+id/kvadrat_two"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kvadrat"
        app:layout_constraintStart_toEndOf="@id/kvadrat_one"
        app:layout_constraintTop_toBottomOf="@+id/image_foto_one" />

    <ImageView
        android:id="@+id/kvadrat_three"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/kvadrat"
        app:layout_constraintStart_toEndOf="@id/kvadrat_two"
        app:layout_constraintTop_toBottomOf="@+id/image_foto_one" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/kvadrat_one"
        app:layout_constraintBottom_toBottomOf="@id/kvadrat_one"
        app:layout_constraintStart_toStartOf="@id/kvadrat_one"
        app:layout_constraintEnd_toEndOf="@id/kvadrat_one"
        android:background="@drawable/camera"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/kvadrat_two"
        app:layout_constraintBottom_toBottomOf="@id/kvadrat_two"
        app:layout_constraintStart_toStartOf="@id/kvadrat_two"
        app:layout_constraintEnd_toEndOf="@id/kvadrat_two"
        android:background="@drawable/gruppy"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/kvadrat_three"
        app:layout_constraintBottom_toBottomOf="@id/kvadrat_three"
        app:layout_constraintStart_toStartOf="@id/kvadrat_three"
        app:layout_constraintEnd_toEndOf="@id/kvadrat_three"
        android:background="@drawable/google"
        />

    <TextView
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kvadrat_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:text="312"
        android:textSize="50sp"
        android:textColor="#000000"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/numbers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="Перейти"
        android:textColor="@color/white"
        android:background="@drawable/bg_edit"
        />








</androidx.constraintlayout.widget.ConstraintLayout>